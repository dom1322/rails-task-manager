<p><strong>Detalles:</strong> <%= @task.details %></p>

<%= form_for @task, url: task_path(@task), method: :patch do |form| %>
  <div class="form-group">
    <%= form.label :completed, class: 'form-check-label' %>
    <%= form.check_box :completed, class: 'form-check-input' %>
    <% if @task.completed %>
      <span>This task is completed.</span>
    <% else %>
      <span>This task is not completed.</span>
    <% end %>
  </div>
<% end %>

